{% block heptacom_admin_open_auth_client_edit_page_content_provider_settings %}
    {% parent %}

    <sw-card
        v-if="item && item.provider === 'okta'"
    >
        <sw-text-field
            :label="$t('heptacomAdminOpenAuthClient.providerFields.okta.organizationName')"
            :help-text="$t('heptacomAdminOpenAuthClient.providerFields.okta.organizationName-help')"
            v-model="item.config.organizationName"
        ></sw-text-field>
        <sw-text-field
            :label="$t('heptacomAdminOpenAuthClient.providerFields.okta.clientId')"
            v-model="item.config.clientId"
        ></sw-text-field>
        <sw-password-field
            :label="$t('heptacomAdminOpenAuthClient.providerFields.okta.clientSecret')"
            v-model="item.config.clientSecret"
        ></sw-password-field>
        <heptacom-admin-open-auth-scope-field
            :label="$t('heptacomAdminOpenAuthClient.providerFields.okta.additionalScopes')"
            v-model="item.config.scopes"
        ></heptacom-admin-open-auth-scope-field>
    </sw-card>
{% endblock %}
