{% block heptacom_admin_open_auth_client_edit_page_content_provider_settings %}
    {% parent %}

    <sw-card
        v-if="item && item.provider === 'microsoft_azure'"
    >
        <sw-text-field
            :copyable="true"
            :copyableTooltip="true"
            :label="$t('heptacomAdminOpenAuthClient.providerFields.microsoft_azure.redirectUri')"
            :value="item.config.redirectUri"
            disabled
        ></sw-text-field>
        <sw-text-field
            :label="$t('heptacomAdminOpenAuthClient.providerFields.microsoft_azure.appId')"
            v-model="item.config.appId"
        ></sw-text-field>
        <sw-password-field
            :label="$t('heptacomAdminOpenAuthClient.providerFields.microsoft_azure.appSecret')"
            v-model="item.config.appSecret"
        ></sw-password-field>
    </sw-card>
{% endblock %}
