{% block heptacom_admin_open_auth_client_edit_page_content_provider_settings %}
    {% parent %}

    <sw-card
        v-if="item && item.provider === 'microsoft_azure'"
    >
        <sw-text-field
            :label="$t('heptacomAdminOpenAuthClient.providerFields.microsoft_azure.tenant_id')"
            v-model="item.config.tenant_id"
        ></sw-text-field>
        <sw-text-field
            :label="$t('heptacomAdminOpenAuthClient.providerFields.microsoft_azure.client_id')"
            v-model="item.config.client_id"
        ></sw-text-field>
        <sw-password-field
            :label="$t('heptacomAdminOpenAuthClient.providerFields.microsoft_azure.client_secret')"
            v-model="item.config.client_secret"
        ></sw-password-field>
        <heptacom-admin-open-auth-scope-field
            :label="$t('heptacomAdminOpenAuthClient.providerFields.microsoft_azure.additional_scopes')"
            v-model="item.config.scopes"
        ></heptacom-admin-open-auth-scope-field>
    </sw-card>
{% endblock %}
