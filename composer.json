{
    "name": "heptacom/shopware-platform-admin-open-auth",
    "license": "Apache-2.0",
    "description": "Shopware plugin to allow OAuth providers to provide admin logins",
    "type": "shopware-platform-plugin",
    "version": "3.0.0",
    "keywords": [
        "ecommerce",
        "shopware",
        "shopware-platform",
        "administration",
        "oauth",
        "open-authentication"
    ],
    "authors": [
        {
            "name": "HEPTACOM GmbH",
            "role": "Manufacturer"
        },
        {
            "name": "Joshua Behrens",
            "role": "Developer"
        },
        {
            "name": "Julian Krzefski",
            "role": "Developer"
        }
