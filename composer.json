        "shopware/administration": ">= 6.2 <6.4",
        "shopware/core": ">= 6.2 <6.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "kubawerlos/php-cs-fixer-custom-fixers": "^1.17"
    },
    "extra": {
        "shopware-plugin-class": "Heptacom\\AdminOpenAuth\\KskHeptacomAdminOpenAuth",
        "label": {
